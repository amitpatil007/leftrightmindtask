  #TextField
  pod 'SkyFloatingLabelTextField'

  #Custom Alert Views(Messages)
  pod 'SwiftMessages'

  #JSON handling
  pod 'SwiftyJSON'
  
  #Expandable Table View
  pod 'ExpandableCell'

